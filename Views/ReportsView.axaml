<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:AgentBuddy.Models"
             xmlns:vm="using:AgentBuddy.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="AgentBuddy.Views.ReportsView"
             x:DataType="vm:ReportsViewModel">

    <ScrollViewer>
        <StackPanel Spacing="20" Margin="0,0,0,24">
            <StackPanel Spacing="2">
                <TextBlock Text="Operations" Classes="Kicker"/>
                <TextBlock Text="Reports" Classes="SectionHeader"/>
            </StackPanel>

            <Border Classes="SectionCard" Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="Daily Summary" Classes="SubHeader"/>
                    <TextBlock Text="{Binding SummaryText}"
                               Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <WrapPanel>
                <Button Classes="Primary"
                        Command="{Binding RefreshCommand}"
                        Padding="16,10"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>

                <Border Margin="0,0,12,0"
                        Padding="10,6"
                        CornerRadius="8"
                        Background="{DynamicResource AppCardBackgroundBrush}"
                        BorderBrush="{DynamicResource AppBorderBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Print Copies"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                        <ComboBox Width="84"
                                  HorizontalAlignment="Left"
                                  ItemsSource="{Binding CopyOptions}"
                                  SelectedItem="{Binding PrintCopies}"/>
                    </StackPanel>
                </Border>

                <Button Classes="Success"
                        Command="{Binding PrintAllCommand}"
                        IsEnabled="{Binding HasPrintableReports}"
                        Padding="16,10"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Print All (Today)"/>
                    </StackPanel>
                </Button>

                <Button Classes="Secondary"
                        Command="{Binding GeneratePayslipsCommand}"
                        IsEnabled="{Binding HasReports}"
                        Padding="16,10"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Generate Payslip (Selected)"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Max 3 payslips per A4 page"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
            </WrapPanel>

            <Border Classes="SectionCard" Padding="16" IsVisible="{Binding HasReports}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Today's Lists" Classes="SubHeader"/>

                    <ItemsControl ItemsSource="{Binding TodayReports}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:DailyListReport">
                                <Border Margin="0,4"
                                        Padding="12"
                                        Classes="Card">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="6" ColumnSpacing="10">
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                            <CheckBox IsChecked="{Binding IsSelectedForPayslip}"
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ReferenceNumber}"
                                                       FontFamily="Consolas"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding ListDisplay}"
                                                       Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding TimestampDisplay}"
                                                       Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                            <Button Classes="Secondary"
                                                    Content="View"
                                                    Click="ViewPdf_Click"
                                                    IsEnabled="{Binding HasPdf}"
                                                    Padding="12,6"/>
                                            <Button Classes="Primary"
                                                    Content="Print"
                                                    Click="PrintPdf_Click"
                                                    IsEnabled="{Binding HasPdf}"
                                                    Padding="12,6"/>
                                            <Button Classes="Danger"
                                                    Content="Delete"
                                                    Click="DeleteReport_Click"
                                                    Padding="12,6"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding AccountCount, StringFormat='Accounts: {0}'}"
                                                   Foreground="{DynamicResource AppTextSecondaryBrush}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding HasPdf, StringFormat='PDF Available: {0}'}"
                                                   Foreground="{DynamicResource AppTextSecondaryBrush}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding AccountsRaw}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource AppTextSecondaryBrush}"
                                                   FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Classes="SectionCard" Padding="16" IsVisible="{Binding !HasReports}">
                <TextBlock Text="No lists found for today."
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
