<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:AgentBuddy.Models"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="AgentBuddy.Views.AccountDetailsWindow"
        x:DataType="models:RDAccount"
        Title="Account Details"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="{DynamicResource AppCardBackgroundBrush}">

    <Border Padding="32" Classes="FadeIn">
        <StackPanel Spacing="20">
            
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Profile" Classes="Kicker"/>
                <TextBlock Text="Account Details" 
                           Classes="SectionHeader"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                <Separator Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Account Information -->
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                  ColumnDefinitions="150,*"
                  RowSpacing="16">
                
                <!-- Account Number -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Account No:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="{Binding AccountNo}"
                           FontFamily="Consolas"
                           FontWeight="SemiBold"
                           FontSize="15"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <!-- Name -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Name:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{Binding AccountName}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <!-- Amount -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Amount:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{Binding Denomination}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentBlueBrush}"/>

                <!-- Due Date -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Due Date:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="{Binding NextInstallmentDate}"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <!-- Month Paid Upto -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Month Paid upto:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="{Binding MonthPaidUpto}"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <!-- Short Code -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="Short Code:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="5" Grid.Column="1"
                           FontFamily="Consolas"
                           Foreground="{DynamicResource AppTextPrimaryBrush}">
                    <Run Text="{Binding ShortCode}"/>
                </TextBlock>

                <!-- First Seen -->
                <TextBlock Grid.Row="6" Grid.Column="0"
                           Text="First Seen:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="6" Grid.Column="1"
                           Text="{Binding FirstSeen, StringFormat='{}{0:dd-MMM-yyyy}'}"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <!-- Last Updated -->
                <TextBlock Grid.Row="7" Grid.Column="0"
                           Text="Last Updated:" 
                           Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="7" Grid.Column="1"
                           Text="{Binding LastUpdated, StringFormat='{}{0:dd-MMM-yyyy HH:mm}'}"
                           Foreground="{DynamicResource AppTextPrimaryBrush}"/>

            </Grid>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Classes="Primary" 
                        Width="120"
                        Click="AddToList_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Add to List"/>
                    </StackPanel>
                </Button>
                
                <Button Classes="Secondary" 
                        Width="100"
                        Click="Close_Click">
                    <TextBlock Text="Close"/>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>

</Window>
