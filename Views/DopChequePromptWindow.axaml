<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AgentBuddy.ViewModels"
        x:Class="AgentBuddy.Views.DopChequePromptWindow"
        x:DataType="vm:DopChequePromptViewModel"
        mc:Ignorable="d"
        Width="560"
        Height="360"
        MinWidth="560"
        MinHeight="360"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="DOP Cheque Details Required">

    <Border Padding="18"
            Background="{DynamicResource AppCardBackgroundBrush}">
        <StackPanel Spacing="12">
            <TextBlock Text="DOP Cheque details are required for this list."
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AppTextPrimaryBrush}"/>

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="List" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ListName}" Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Account" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AccountNo}" FontFamily="Consolas" Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Name" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding AccountName}" TextWrapping="Wrap" Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Installments" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Installment}" Foreground="{DynamicResource AppTextPrimaryBrush}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Cheque No" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         x:Name="ChequeNoTextBox"
                         Text="{Binding ChequeNo}"
                         Watermark="Enter cheque number"
                         FontFamily="Consolas"
                         MaxLength="30"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="A/C for Payment" Foreground="{DynamicResource AppTextSecondaryBrush}"/>
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         x:Name="PaymentAccountTextBox"
                         Text="{Binding PaymentAccountNo}"
                         Watermark="Enter account number for payment"
                         FontFamily="Consolas"
                         MaxLength="30"/>
            </Grid>

            <TextBlock Text="These values are used only for this run."
                       FontSize="11"
                       Foreground="{DynamicResource AppTextSecondaryBrush}"/>

            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                <Button Grid.Column="1"
                        Classes="Secondary"
                        Content="Cancel"
                        Click="Cancel_Click"
                        Padding="14,8"/>
                <Button Grid.Column="2"
                        Classes="Primary"
                        Content="Save and Continue"
                        Click="Save_Click"
                        Padding="14,8"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
